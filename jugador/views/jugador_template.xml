                                <strong t-field="cuerpo_tecnico.name"></strong>
                            </div>
                            <div t-field="cuerpo_tecnico.puesto"/>
                            <div t-field="cuerpo_tecnico.notes" class="text-muted mt16"/>
                        </div>
                    </section>
                </div>
            </t>
        </template>

